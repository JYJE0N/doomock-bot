# .env.example

# ====================================
# Railway Variables에 설정해야 할 환경 변수들
# Railway Dashboard > Variables에서 설정
# ====================================

# 필수 설정
BOT_TOKEN=your_telegram_bot_token_here
MONGO_URL=your_mongodb_connection_string

# 선택적 API Keys
WEATHER_API_KEY=your_openweather_api_key
AIR_KOREA_API_KEY=your_air_korea_api_key

# Railway가 자동으로 제공하는 변수들
# RAILWAY_DEPLOYMENT_ID (자동 생성)
# PORT (자동 할당)
# NODE_ENV=production (Railway에서 자동 설정)

# ====================================
# 로컬 개발용 (.env 파일)
# ====================================

# 기능 모듈 토글 (기본값은 true, 필요시 false로 설정)
ENABLE_TODO_MODULE=true
ENABLE_LEAVE_MODULE=true
ENABLE_WEATHER_MODULE=true
ENABLE_FORTUNE_MODULE=true
ENABLE_TIMER_MODULE=true
ENABLE_INSIGHT_MODULE=true
ENABLE_UTILS_MODULE=true
ENABLE_REMINDER_MODULE=true
ENABLE_WORKTIME_MODULE=true

# 추가 기능
ENABLE_TTS_FEATURE=true
ENABLE_VOICE_FEATURE=true
