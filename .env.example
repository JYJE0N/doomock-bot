# DoomockBot Environment Variables Template
# Copy this file to .env.development and fill in your actual values

NODE_ENV=development
FORCE_LOGGER=chalk
FORCE_LOGGER_LEVEL=debug

# ===== 🌐 API 키 설정 =====  
BOT_TOKEN=YOUR_TELEGRAM_BOT_TOKEN_HERE
AIR_KOREA_API_KEY=YOUR_AIR_KOREA_API_KEY_HERE
WEATHER_API_KEY=YOUR_OPENWEATHER_API_KEY_HERE
MONGO_URL=YOUR_MONGODB_CONNECTION_STRING_HERE

# ===== 📚 할일 관리 설정 =====
TODO_MAX_TEXT_LENGTH=500
TODO_MAX_DESCRIPTION_LENGTH=1000
TODO_PAGE_SIZE=10
TODO_CACHE_ENABLED=true
TODO_CACHE_TIMEOUT=300000
TODO_AUTO_SAVE=true
TODO_ENABLE_NOTIFICATIONS=true
ENABLE_TODO_CATEGORIES=true
ENABLE_TODO_PRIORITIES=true
ENABLE_TODO_DUE_DATES=true
TODO_MAX_RETRIES=3
TODO_BACKUP_INTERVAL=86400000

# Fortune 개발자 모드
FORTUNE_DEV_MODE=true
FORTUNE_UNLIMITED=true
DEVELOPER_IDS=YOUR_TELEGRAM_USER_ID_HERE

# --------------------------------
# ⏱️ 타이머 테스트 설정 (단위: 분)
# --------------------------------
# 예: 0.1 = 6초, 0.2 = 12초, 1 = 1분

# 집중 타이머 시간을 6초(0.1분)로 설정
TIMER_FOCUS_DURATION=0.1
# 짧은 휴식 시간을 3초(0.05분)로 설정
TIMER_SHORT_BREAK=0.05
# 긴 휴식 시간을 6초(0.1분)로 설정
TIMER_LONG_BREAK=0.1

# ===== 🔊 구글 설정 =====   
GOOGLE_CLIENT_EMAIL=YOUR_GOOGLE_SERVICE_ACCOUNT_EMAIL_HERE
GOOGLE_PROJECT_ID=YOUR_GOOGLE_CLOUD_PROJECT_ID_HERE
GOOGLE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nYOUR_GOOGLE_PRIVATE_KEY_HERE\n-----END PRIVATE KEY-----"
BASE_URL=YOUR_APPLICATION_BASE_URL_HERE

# ===== 📡 TTS 설정 =====
TTS_API_KEY=YOUR_GOOGLE_TTS_API_KEY_HERE
TTS_CACHE_DIR=./cache/tts
TTS_DEFAULT_LANGUAGE=ko-KR
TTS_MAX_TEXT_LENGTH=5000
TTS_VOICE_NAME=ko-KR-Wavenet-A

# ===== 🛡️ 프라이버시 설정 =====
PRIVACY_MODE=true
LOG_USER_IDS=true
LOG_USER_NAMES=false
LOG_LEVEL=debug
LOG_RETENTION_DAYS=7
LOG_FULL_NAMES=false

# ===== 기타설정 =====
NIXPACKS_NODE_VERSION=18

# ==== 날씨설정 ====
DEFAULT_WEATHER_CITY=서울
WEATHER_ENABLE_DUST=true
WEATHER_ENABLE_FORECAST=true