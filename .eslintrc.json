{
  "env": {
    "node": true,
    "es2021": true,
    "commonjs": true
  },
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "script"
  },
  "extends": ["eslint:recommended"],
  "rules": {
    "no-unused-vars": [
      "error",
      {
        "vars": "all", // 변수는 여전히 체크
        "args": "none", // 매개변수는 체크 안 함 (핵심!)
        "ignoreRestSiblings": false,
        "varsIgnorePattern": "^_", // _로 시작하는 변수는 무시
        "caughtErrors": "none" // catch의 error 매개변수도 무시
      }
    ],
    "no-console": "off", // console.log 허용 (개발용)
    "no-constant-condition": "warn" // 무한루프 등은 경고만
  }
}
