{
  "name": "doomock-bot",
  "version": "3.0.1",
  "description": "두목봇 - 직장인을 위한 올인원 텔레그램 어시스턴트",
  "main": "doomock_bot.js",
  "scripts": {
    "start": "node doomock_bot.js",
    "dev": "NODE_ENV=development nodemon doomock_bot.js",
    "dev:debug": "NODE_ENV=development LOG_LEVEL=debug nodemon doomock_bot.js",
    "prod": "NODE_ENV=production node doomock_bot.js",
    "test": "NODE_ENV=test jest",
    "test:watch": "NODE_ENV=test jest --watch",
    "test:coverage": "NODE_ENV=test jest --coverage",
    "lint": "eslint src/ --ext .js",
    "lint:fix": "eslint src/ --ext .js --fix",
    "format": "prettier --write \"src/**/*.js\" \"*.js\"",
    "format:check": "prettier --check \"src/**/*.js\" \"*.js\"",
    "build": "echo 'No build step required for Node.js app'",
    "postinstall": "echo 'Installation complete'",
    "clean": "rm -rf node_modules package-lock.json && npm install",
    "health": "node scripts/health-check.js",
    "migrate": "node scripts/migrate.js",
    "seed": "node scripts/seed.js",
    "logs": "tail -f logs/app.log",
    "docs": "echo 'Opening documentation...' && open README.md",
    "railway:deploy": "echo 'Deploying to Railway...' && git push",
    "validate": "npm run lint && npm run format:check && npm run test"
  },
  "keywords": [
    "telegram",
    "bot",
    "productivity",
    "workplace",
    "assistant",
    "timer",
    "todo",
    "fortune",
    "reminder",
    "weather",
    "insights",
    "modular",
    "scalable",
    "railway",
    "mongodb",
    "korean"
  ],
  "author": {
    "name": "Doo-mockBro",
    "email": "contact@doomock.com",
    "url": "https://github.com/JYJE0N"
  },
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/JYJE0N/doomock-bot.git"
  },
  "bugs": {
    "url": "https://github.com/JYJE0N/doomock-bot/issues"
  },
  "homepage": "https://github.com/JYJE0N/doomock-bot#readme",
  "dependencies": {
    "axios": "^1.6.0",
    "dotenv": "^16.0.1",
    "form-data": "^4.0.0",
    "gtts": "^0.2.1",
    "mongodb": "^5.1.0",
    "mongoose": "^8.0.0",
    "node-telegram-bot-api": "^0.64.0"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.0.0",
    "eslint": "^8.0.0",
    "jest": "^29.0.0",
    "nodemon": "^2.0.22",
    "prettier": "^3.6.2",
    "supertest": "^6.0.0"
  },
  "jest": {
    "testEnvironment": "node",
    "setupFilesAfterEnv": [
      "<rootDir>/tests/setup.js"
    ],
    "collectCoverageFrom": [
      "src/**/*.js",
      "!src/**/*.test.js",
      "!src/config/*.js"
    ],
    "testMatch": [
      "tests/**/*.test.js",
      "src/**/__tests__/**/*.js"
    ],
    "coverageDirectory": "coverage",
    "coverageReporters": [
      "text",
      "lcov",
      "html"
    ],
    "testTimeout": 10000,
    "verbose": true
  },
  "eslintConfig": {
    "env": {
      "node": true,
      "es2021": true,
      "jest": true
    },
    "extends": [
      "eslint:recommended"
    ],
    "parserOptions": {
      "ecmaVersion": 2021,
      "sourceType": "module"
    },
    "rules": {
      "no-unused-vars": "warn",
      "no-console": "off",
      "prefer-const": "off",
      "no-var": "warn",
      "eqeqeq": "off",
      "curly": "off",
      "brace-style": "off",
      "indent": "off",
      "semi": "warn",
      "quotes": "off",
      "comma-dangle": "off"
    },
    "ignorePatterns": [
      "node_modules/",
      "coverage/",
      "logs/",
      "temp/"
    ]
  },
  "prettier": {
    "semi": true,
    "trailingComma": "all",
    "singleQuote": false,
    "printWidth": 80,
    "tabWidth": 2,
    "useTabs": false,
    "bracketSpacing": true,
    "arrowParens": "avoid",
    "endOfLine": "lf"
  },
  "nodemonConfig": {
    "watch": [
      "src/",
      "doomock_bot.js",
      ".env"
    ],
    "ext": "js,json",
    "ignore": [
      "node_modules/",
      "logs/",
      "temp/",
      "coverage/",
      "*.test.js"
    ],
    "delay": 1000,
    "env": {
      "NODE_ENV": "development",
      "LOG_LEVEL": "debug"
    }
  },
  "config": {
    "mongodbMemoryServer": {
      "version": "6.0.0"
    }
  },
  "files": [
    "src/",
    "doomock_bot.js",
    "README.md",
    "LICENSE"
  ],
  "directories": {
    "test": "tests",
    "doc": "docs"
  },
  "funding": {
    "type": "github",
    "url": "https://github.com/sponsors/JYJE0N"
  },
  "private": false,
  "publishConfig": {
    "access": "public"
  }
}
