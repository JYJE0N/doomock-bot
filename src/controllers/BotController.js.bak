        logger.error("ğŸš¨ 409 ì¶©ëŒ ê°ì§€!");
      } else {
        logger.error("í´ë§ ì˜¤ë¥˜:", error.message);
      }
    });

    this.bot.on("error", (error) => {
      logger.error("ë´‡ ì—ëŸ¬:", error.message);
    });

    logger.success("âœ… ì´ë²¤íŠ¸ ë¦¬ìŠ¤ë„ˆ ë“±ë¡ ì™„ë£Œ!");
  }

