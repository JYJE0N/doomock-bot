        // ì—ëŸ¬ ë©”ì‹œì§€ ì „ì†¡
        if (callbackQuery.message?.chat) {
          await this.sendErrorMessage(callbackQuery.message.chat.id);
        }
      } finally {
        setTimeout(() => {
          this.processingCallbacks.delete(callbackKey);
        }, 1000);
      }
    });

    // ì—ëŸ¬ ì´ë²¤íŠ¸
    this.bot.on("polling_error", (error) => {
