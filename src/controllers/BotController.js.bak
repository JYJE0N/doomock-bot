    const chatId = msg.chat.id;
    const userName = UserHelper.getUserName(msg.from);

    logger.debug(`ğŸ’¬ ë©”ì‹œì§€: "${text}" (${userName})`);

    // /start ëª…ë ¹ì–´ íŠ¹ë³„ ì²˜ë¦¬
    if (text === "/start") {
